<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

<item>
    <shape android:shape="oval">
       <gradient android:startColor="@color/white" android:endColor="@color/lightPurple" android:angle="270"></gradient>
        <stroke android:color="@color/darkPurple"></stroke>
        <size android:width="150dp" android:height="150dp"></size>
    </shape>

</item>

<item
    android:left="0dp"
    android:right="0dp"
    android:top="0dp"
    android:bottom="2dp">
    <shape android:shape="oval">
        <solid android:color="@color/white"/>
        <corners android:radius="2100dp" />
    </shape>
</item>
</layer-list>