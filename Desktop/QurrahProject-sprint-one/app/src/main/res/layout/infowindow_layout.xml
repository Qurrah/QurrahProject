<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:backgroundTint="@color/lightGrey"
    >

    <LinearLayout
        android:layout_width="210dp"
        android:layout_height="270dp"
        android:orientation="vertical"
        >


    <ImageView
        android:id="@+id/info_window_image"
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:maxWidth="150dp"
        android:maxHeight="100dp"
        android:adjustViewBounds="true"
        android:layout_gravity="center"
        android:scaleType="fitXY"
        android:src="@drawable/logo" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_gravity="right"
        android:gravity="right"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/info_window_image"
        android:text="العنوان"
        android:textColor="@color/darkPurple"
        android:textStyle="bold"
        android:textSize="12dp"/>

    <TextView
        android:id="@+id/titleInfoWind"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:gravity="right"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/info_window_image"
        android:text="title"
        android:textSize="12dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="right"
        android:gravity="right"
        android:layout_toRightOf="@id/info_window_image"
        android:text="الفئة"
        android:textColor="@color/darkPurple"
        android:textSize="12dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/categoryInfoWind"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/titleInfoWind"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="5dp"
        android:layout_gravity="right"
        android:gravity="right"
        android:layout_toRightOf="@id/info_window_image"
        android:text="Placas: SX5487"
        android:textSize="12dp" />

    <TextView
        android:id="@+id/typ"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="11dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="right"
        android:gravity="right"
        android:layout_toRightOf="@id/info_window_image"
        android:text="نوع البلاغ"
        android:textColor="@color/darkPurple"
        android:textSize="12dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/typeInfoWindo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/categoryInfoWind"
        android:layout_marginLeft="9dp"
        android:layout_marginTop="5dp"
        android:layout_gravity="right"
        android:gravity="right"
        android:layout_toRightOf="@id/info_window_image"
        android:text="Estado: Activo"
        android:textSize="12dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/typeInfoWindo"
        android:layout_marginLeft="-4dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:layout_toRightOf="@id/info_window_image"
        android:paddingLeft="5dp"
        android:text="اضغط للمزيد من التفاصيل"
        android:textColor="@color/darkPurple"
        android:textSize="12sp"
        android:textStyle="bold" />

    </LinearLayout>

</RelativeLayout>