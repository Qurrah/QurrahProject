<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/default_frame"
    tools:context=".UI.ViewReport"
    android:layoutDirection="rtl"
    >

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        >


        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/backImg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_scrollFlags="exitUntilCollapsed|scroll"
            app:contentScrim="@color/darkPurple"
            app:expandedTitleMarginStart="48dp"
            app:expandedTitleMarginEnd="64dp"

           >

            <androidx.appcompat.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                app:layout_collapseMode="pin">


            </androidx.appcompat.widget.Toolbar>



            <ImageView
                android:id="@+id/reportImg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fitsSystemWindows="true"
                android:scaleType="fitXY"
                android:background="@drawable/gray_buttons"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                app:srcCompat="@color/colorPrimaryDark"
                tools:ignore="MissingConstraints"
                app:layout_collapseMode="parallax"
                app:layout_collapseParallaxMultiplier="0.9"
                />


        </com.google.android.material.appbar.CollapsingToolbarLayout>


    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/default_frame"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">





        <LinearLayout
            android:id="@+id/contentLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/default_frame"
            >

<!--            <ImageView-->
<!--                android:id="@+id/reportImg"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="200dp"-->
<!--                android:fitsSystemWindows="true"-->
<!--                android:scaleType="fitXY"-->
<!--                app:srcCompat="@color/colorPrimaryDark"-->
<!--                tools:ignore="MissingConstraints"-->
<!--                android:layout_marginRight="40dp"/>-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="30dp"
            android:background="@color/white"
            android:layoutDirection="rtl">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="10dp"
                android:text="معلومات البلاغ"
                android:layoutDirection="rtl"
                android:textColor="@color/lightPurple"
                android:textDirection="rtl"
                android:textFontWeight="10"
                android:textSize="15dp"
                android:textStyle="bold"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/reportTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="10dp"
                android:layout_marginTop="25dp"
                android:hint="العنوان:"
                android:layoutDirection="rtl"
                android:textDirection="rtl"
                android:textFontWeight="5"
                android:textSize="30dp"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/reportDes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="10dp"
                android:hint="\nالوصف:"
                android:layout_gravity="right"
                android:layoutDirection="rtl"
                android:textDirection="rtl"
                android:textAlignment="inherit"
                android:textSize="20dp"
                tools:ignore="MissingConstraints" />

        </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:orientation="vertical"
                android:elevation="1dp"
                android:background="@color/white">

            </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/mapLayout"
            android:orientation="vertical"
            android:layout_marginTop="45dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@color/white"
            android:layoutDirection="rtl">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginBottom="20dp"
                android:text="الموقع"
                android:layoutDirection="rtl"
                android:textColor="@color/lightPurple"
                android:textDirection="rtl"
                android:textFontWeight="10"
                android:textSize="15dp"
                android:textStyle="bold"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/yourReport"
                android:layout_width="match_parent"
                android:layout_height="29dp"
                android:gravity="center"
                android:text="لقد قمت بنشر هذا البلاغ"
                android:textAlignment="center"
                android:visibility="gone"
                tools:ignore="MissingConstraints" />

            <fragment
                android:id="@+id/map"
                android:name="com.google.android.gms.maps.SupportMapFragment"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                tools:context=".UI.ViewReport"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/noMapLayout"
            android:orientation="vertical"
            android:layout_marginTop="45dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@color/white"
            android:visibility="gone"
            android:layoutDirection="rtl">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginBottom="20dp"
                android:text="الموقع"
                android:layoutDirection="rtl"
                android:textColor="@color/lightPurple"
                android:textDirection="rtl"
                android:textFontWeight="10"
                android:textSize="15dp"
                android:textStyle="bold"
                tools:ignore="MissingConstraints" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="29dp"
                android:gravity="center"
                android:text="لا يوجد موقع لهذا البلاغ"
                android:textAlignment="center"
                tools:ignore="MissingConstraints" />
        </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>




    <LinearLayout
        android:id="@+id/whatsapp"
        android:layout_width="match_parent"
        android:layout_marginTop="50dp"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:elevation="10dp"
        android:paddingRight="220dp"
        android:paddingTop="15dp"
        android:background="@drawable/gray_buttons"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom">



        <TextView
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:background="@drawable/whatsapp"
            android:backgroundTint="#DA918291"
            tools:ignore="MissingConstraints"
            android:layout_marginRight="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="واتساب"
            android:layout_gravity="right"
            android:layout_marginRight="20dp"
            tools:ignore="MissingConstraints"
            />

    </LinearLayout>



    <LinearLayout
        android:id="@+id/chatting"
        android:layout_width="220dp"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:elevation="10dp"
        android:paddingTop="15dp"
        android:background="@drawable/purple_buttons"
        android:backgroundTint="#DA918291"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom">

        <Button
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="right"
            android:backgroundTint="@color/lightGrey"
            android:background="@drawable/conversation"
            android:layout_marginRight="20dp"
            android:paddingBottom="10dp"
            android:layout_marginBottom="10dp"
            tools:ignore="MissingConstraints"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="محادثة فورية"
            android:layout_gravity="right"
            android:layout_marginRight="30dp"
            tools:ignore="MissingConstraints"
            />


    </LinearLayout>




</androidx.coordinatorlayout.widget.CoordinatorLayout>

