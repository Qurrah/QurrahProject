<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/default_frame"
    tools:context=".UI.ViewReport"
    android:layoutDirection="rtl"
    >

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        >


        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/backImg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_scrollFlags="exitUntilCollapsed|scroll"
            app:contentScrim="@color/darkPurple"
            app:expandedTitleMarginStart="48dp"
            app:expandedTitleMarginEnd="64dp"

           >

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                app:layout_collapseMode="pin">


            </androidx.appcompat.widget.Toolbar>



            <ImageView
                android:id="@+id/reportImg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fitsSystemWindows="true"
                android:scaleType="fitXY"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                app:srcCompat="@color/colorPrimaryDark"
                tools:ignore="MissingConstraints"
                app:layout_collapseMode="parallax"
                app:layout_collapseParallaxMultiplier="0.9"
                />


        </com.google.android.material.appbar.CollapsingToolbarLayout>


    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/default_frame"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">





        <LinearLayout
            android:id="@+id/contentLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:ignore="MissingConstraints"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/default_frame"
            >

<!--            <ImageView-->
<!--                android:id="@+id/reportImg"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="200dp"-->
<!--                android:fitsSystemWindows="true"-->
<!--                android:scaleType="fitXY"-->
<!--                app:srcCompat="@color/colorPrimaryDark"-->
<!--                tools:ignore="MissingConstraints"-->
<!--                android:layout_marginRight="40dp"/>-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="30dp"
            android:background="@color/white"
            android:layoutDirection="rtl">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="10dp"
                android:text="معلومات البلاغ"
                android:layoutDirection="rtl"
                android:textColor="@color/lightPurple"
                android:textDirection="rtl"
                android:textFontWeight="10"
                android:textSize="18dp"
                android:textStyle=""
                tools:ignore="MissingConstraints" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="15dp"
                android:layout_marginRight="10dp"
                android:hint="العنوان"
                android:layoutDirection="rtl"
                android:textDirection="rtl"
                android:textFontWeight="5"
                android:textSize="12dp"
                tools:ignore="MissingConstraints" />


            <TextView
                android:id="@+id/reportTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:hint="العنوان"
                android:layoutDirection="rtl"
                android:textDirection="rtl"
                android:textFontWeight="5"
                android:textSize="18dp"
                tools:ignore="MissingConstraints" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="20dp"
                android:layout_marginRight="10dp"
                android:hint="الوصف"
                android:layoutDirection="rtl"
                android:textDirection="rtl"
                android:textFontWeight="5"
                android:textSize="12dp"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/reportDes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="5dp"
                android:hint="الوصف"
                android:layoutDirection="rtl"
                android:textAlignment="inherit"
                android:textDirection="rtl"
                android:textSize="18dp"
                tools:ignore="MissingConstraints" />



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="20dp"
                android:layout_marginRight="10dp"
                android:hint="نوع البلاغ"
                android:layoutDirection="rtl"
                android:textDirection="rtl"
                android:textFontWeight="5"
                android:textSize="12dp"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/reportType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="5dp"
                android:hint="النوع"
                android:layoutDirection="rtl"
                android:textAlignment="inherit"
                android:textDirection="rtl"
                android:textSize="18dp"
                tools:ignore="MissingConstraints" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="20dp"
                android:layout_marginRight="10dp"
                android:hint="صاحب البلاغ"
                android:layoutDirection="rtl"
                android:textDirection="rtl"
                android:textFontWeight="5"
                android:textSize="12dp"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/reportOwner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:hint="اسم المسخدم"
                android:layoutDirection="rtl"
                android:textAlignment="inherit"
                android:textDirection="rtl"
                android:textSize="18dp"
                tools:ignore="MissingConstraints" />


            <TextView
                android:id="@+id/yourReport"
                android:layout_width="match_parent"
                android:layout_height="29dp"
                android:gravity="center"
                android:text="لقد قمت بنشر هذا البلاغ"
                android:textAlignment="center"
                android:visibility="gone"
                tools:ignore="MissingConstraints" />

        </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:orientation="vertical"
                android:elevation="1dp"
                android:layout_marginTop="20dp"
                android:background="@color/white">

            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="20dp"
                android:text="الموقع"
                android:layoutDirection="rtl"
                android:textColor="@color/lightPurple"
                android:textDirection="rtl"
                android:textFontWeight="10"
                android:textSize="18dp"
                android:textStyle="bold"
                tools:ignore="MissingConstraints" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:id="@+id/mapLayout"
            android:orientation="vertical"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@color/white"
            android:layoutDirection="rtl">

            <TextView
                android:id="@+id/locationDesLable"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:hint="وصف الموقع"
                android:layoutDirection="rtl"
                android:textDirection="rtl"
                android:textFontWeight="5"
                android:textSize="12dp"
                tools:ignore="MissingConstraints"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/locationDes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:layoutDirection="rtl"
                android:textDirection="rtl"
                android:textFontWeight="5"
                android:textSize="14dp"
                android:visibility="gone"
                tools:ignore="MissingConstraints" />


            <fragment
                android:id="@+id/Map"
                android:name="com.google.android.gms.maps.SupportMapFragment"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_marginBottom="10dp"
                tools:context=".UI.ViewReport"
                />




        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/noMapLayout"
            android:orientation="vertical"
            android:layout_marginTop="45dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@color/white"
            android:visibility="gone"
            android:layoutDirection="rtl">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="29dp"
                android:gravity="center"
                android:text="لا يوجد موقع لهذا البلاغ"
                android:textAlignment="center"
                android:textSize="12dp"
                tools:ignore="MissingConstraints" />
        </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>



        <FrameLayout
            android:id="@+id/fab2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginRight="23dp"
            android:layout_marginBottom="20dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:elevation="0dp"
            android:backgroundTint="@color/transparent">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="right"
            android:scaleType="fitXY"
            app:borderWidth="0dp"
            android:elevation="0dp"
            app:elevation="0dp"
            app:fabSize="normal"
            android:backgroundTint="@color/lightGrey"
            android:tint="@color/darkPurple"/>

            <TextView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/whatsapp3"
                android:elevation="6dp"
                android:layout_marginRight="4dp"
                android:layout_marginTop="4dp"
                android:backgroundTint="@color/darkPurple"
                >

            </TextView>

        </FrameLayout>


    <FrameLayout
        android:id="@+id/fab1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="bottom"
        android:layout_marginRight="23dp"
        android:layout_marginBottom="20dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:backgroundTint="@color/lightGrey"
            android:tint="@color/darkPurple"
            app:borderWidth="0dp"
            android:elevation="0dp"
            app:elevation="0dp"
            app:fabSize="normal"/>


        <TextView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/conversation"
            android:elevation="7dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="12dp"
            android:backgroundTint="@color/darkPurple"
            >

        </TextView>



    </FrameLayout>



        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            app:srcCompat="@drawable/contact"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:backgroundTint="@color/darkPurple"/>






</androidx.coordinatorlayout.widget.CoordinatorLayout>

